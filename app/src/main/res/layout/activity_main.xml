<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.foolhorse.checkablelayout.CheckableLinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_checkable">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CheckableLinearLayout" />

    </com.foolhorse.checkablelayout.CheckableLinearLayout>


    <com.foolhorse.checkablelayout.CheckableFrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_checkable">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CheckableFrameLayout" />

    </com.foolhorse.checkablelayout.CheckableFrameLayout>

    <com.foolhorse.checkablelayout.CheckableRelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_checkable">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CheckableRelativeLayout" />

    </com.foolhorse.checkablelayout.CheckableRelativeLayout>

</LinearLayout>
